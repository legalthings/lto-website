<div class="section-container cutin-top-alt cutout-bottom">
  <section class="section">
    <div class="container medium">
      <h2 class="has-text-centered section-title">Features</h2>
      <div class="columns has-margin-top-40">
        <div class="icon-container column" style="left:48px;width:280px;height:250px;background-image: url('/assets/rocks/rock-1.svg')">
