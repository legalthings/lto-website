<!doctype html>

{% set title = title %}
{% set description = description %}
{% set currentUrl = currentUrl %}
{% set canonical = canonical %}
{% set ogTitle = ogTitle %}
{% set ogDescription = ogDescription %}
{% set ogUrl = ogUrl %}
{% set locale = locale | default('en') %}
{% set image = "/assets/meta/meta-home.png" %}

<html lang="{{locale}}">

<head>
  <link rel="preconnect" href="/assets/fonts/IBM_Plex_Sans/IBMPlexSans-Light.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="preconnect" href="/assets/fonts/IBM_Plex_Sans/IBMPlexSans-Regular.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="preconnect" href="/assets/fonts/IBM_Plex_Sans/IBMPlexSans-Medium.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="stylesheet" href="/css/main.css">

  <meta name="robots" content="all">
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=2.0">

  <title>{{ title }}</title>
  <link rel="canonical" href="https://www.ltonetwork.com{{ currentUrl }}" />
  <link rel="icon" href="/assets/favicon.png" sizes="32x32" />
  <meta property="locale" content="{{ locale }}" />
  <meta property="og:locale" content="nl_NL" />
  <meta name="type" property="og:type" content="website" />
  <meta name="title" property="og:title" content="{{ title }}" />
  <meta name="description" property="og:description" content="{{ description }}" />
  <meta name="image" property="og:image" content="https://www.ltonetwork.com{{ image }}" />
  <meta name="url" property="og:url" content="https://www.ltonetwork.com{{ currentUrl }}" />
  <meta name="site_name" property="og:site_name" content="LTO Network" />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content="{{ title }}" />
  <meta name="twitter:description" content="{{ description }}" />
  <meta name="twitter:image" content="https://www.ltonetwork.com{{ image }}" />
  
</head>


<body>
 
  {% include "partials/" ~ locale ~ "/navigation.njk" %}

  {% block content %}{% endblock %}


  {% include "partials/" ~ locale ~ "/footer.njk" %}

  <script>
    window.lazyLoadOptions = {
      elements_selector: ".lazy"
    };
  </script>
  
  {% include "partials/cookie-notification.njk" %}

  <script defer src="/js/vendor.js"></script>
  <script defer src="/js/main.js"></script>

</body>

</html>
